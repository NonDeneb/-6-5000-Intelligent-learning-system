/* pages/result/result.wxss */

.container {
  background-color: #F6F6F6;
}

.navigation-container {
  position: fixed;
  width: 100%;
  z-index: 99;
  top: 0;
  left: 0;
  background-color: #FDB547;
}
.navigation-bar {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.navigation-buttons {
  display: flex;
  align-items: center;
  margin-left: 10px;
  box-sizing: border-box;
  border-radius: 15px;
  background-color: transparent;
}
.nav-img{
  height: 16px;
  width: 16px;
}

.navigation-title {
  position: absolute;
  left: 104px;
  right: 104px;
  text-align: center;
  font-size: 16px;
  color: #FFFFFF;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.answer-list {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #FFFFFF;
  margin-top: 20%;
}

.choose-item, .solve-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5% 0;
  width: 100%;
  border-bottom: 1px solid #DDDDDD;
}

.no-type {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 20%;
  margin-left: 5%;
}

.no {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background-color: #C9C9C9;
  font-size: 14px;
  text-align: center;
  line-height: 18px;
  color: #FFFFFF;
}

.options {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 50%;
  margin-right: 5%;
}

.options text {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30px;
  height: 30px;
  background-color: #F2F2F2;
  font-size: 14px;
  border-radius: 50%;
  
}

.options .option-selected {
  background-color: #FBB635;
  color: #FFFFFF;
}

.solve-img {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 45%;
  margin-right: 5%;
}

.solve-img image {
  width: 30px;
  height: 30px;
}

.solve-img .change {
  width: 20px;
  height: 20px;
}

.submit {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 10%;
  background-color: #FFB532;
  color: #FFFFFF;
}

.submit image {
  width: 16px;
  height: 16px;
  margin-right: 10px;
}