/* pages/camera/camera.wxss */
.navigation-container {
    position: fixed;
    width: 100%;
    z-index: 99;
    top: 0;
    left: 0;
  }
  .navigation-bar {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .navigation-buttons {
    display: flex;
    align-items: center;
    margin-left: 10px;
    box-sizing: border-box;
    border-radius: 15px;
    background-color: transparent;
  }
  .nav-img{
    height: 16px;
    width: 16px;
  }
  
  .bottom {
    display: flex;
    align-items: center;
    position: absolute;
    bottom: 5%;
    left: 0;
    width: 100%;
  }
  
  .shot {
    display: flex;
    position: absolute;
    left: 50%;
    justify-content: center;
    align-items: center;
    width: 50px;
    height: 50px;
    background-color: #FF9945;
    border-radius: 50%;
    transform: translate(-50%, 0);
  }
  
  .shot .shot-image {
    width: 30px;
    height: 30px;
  }
  
  .album {
    width: 30px;
    height: 30px;
    margin-left: 15%;
  }

  .pic-list {
    width: 100%;
    height: 200px;
    display: flex;
    flex-direction: row;
    position: absolute;
    bottom: 0;
    left: 0;
    overflow-x: scroll;
  }

  .pic-item {
    position: relative;
    width: 100px;
    height: 100px;
    margin-right: 10px;
  }

  .preview-pic {
    width: 80px;
    height: 80px;
  }

  .remove-button {
    position: absolute;
    left: 50%;
    bottom: -20px;
    width: 30px;
    height: 30px;
    transform: translate(-50%, 0);
    z-index: 99;
  }

  .submit {
    position: absolute;
    width: 40px;
    height: 40px;
    right: 100rpx;
  }