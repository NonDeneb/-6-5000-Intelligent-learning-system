<!--pages/setting/setting.wxml-->
<view class="container">
  <view class="navigation-container" style="{{'height: ' + navigationBarAndStatusBarHeight}}">
    <!--空白来占位状态栏-->
    <view style="{{'height: ' + statusBarHeight}}"></view>
    <!--自定义导航栏-->
    <view class="navigation-bar" style="{{'height:' + navigationBarHeight}}">
        <view class="navigation-buttons" style="{{'height:' + menuButtonHeight}}">
            <image class="nav-img" src='/images/return.png' bindtap="returnBack"></image>
        </view>
        <view class="navigation-title" style="{{'line-height:' + navigationBarHeight}}">{{title}}</view>
    </view>    
</view>
<view style="{{'margin-top: ' + (navigationBarAndStatusBarHeight + 20) + 'px;'}}" >
</view>
<view class="weui-cells__title">当前绑定账号</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
        <input class="weui-input" auto-focus placeholder="请输入账号"/>
    </view>
</view>
<view class="weui-cells__title">当前用户名</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
    <input class="weui-input" auto-focus placeholder="杨小贤"/>
    </view>
</view>
<view class="weui-cells__title">性别</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
        <label class="radio">
        <radio value="r1" checked="true"/>男
        </label>
        <label class="radio">
        <radio value="r2" />女
        </label>
    </view>
</view>
<button class="submit" style="margin-top: 100px; background-color: #FDB547; color: #fff;">提交</button>
</view>